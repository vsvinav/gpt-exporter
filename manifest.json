{
  "manifest_version": 3,
  "name": "ChatGPT Markdown + All Media Exporter",
  "version": "1.9",
  "description": "Export ChatGPT chats with all images downloaded locally and referenced in Markdown.",
  "permissions": ["scripting", "downloads", "activeTab"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  },
  "host_permissions": [
    "https://chat.openai.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  }
}